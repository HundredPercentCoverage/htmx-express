{
  "name": "htmx-express",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon index.ts",
    "start": "node ./dist/index.js",
    "sass": "sass ./scss/index.scss ./public/css/index.css --watch --no-source-map",
    "tailwind": "npx tailwindcss -i ./styles/input.css -o ./public/css/index.css --watch",
    "dev:sass": "concurrently \"npm:sass\" \"npm:dev\"",
    "dev:tw": "concurrently \"npm:tailwind\" \"npm:dev\"",
    "clean": "rimraf ./dist",
    "copy-static": "cp -r ./views ./dist/views && cp -r ./public ./dist/public",
    "build": "npm run clean && npx tsc && npm run copy-static"
  },
